<mjml>
  <mj-head>
    <mj-title>Your Forecast Report</mj-title>
    <mj-font name="Roboto" href="https://fonts.googleapis.com/css?family=Roboto:300,400,700" />
    <mj-attributes>
      <mj-text font-family="Roboto, Arial, sans-serif" color="#333333" />
      <mj-section background-color="#ffffff" padding="20px" />
      <mj-column padding="0" />
      <mj-button background-color="#007bff" color="#ffffff" font-weight="700" border-radius="4px" />
    </mj-attributes>
  </mj-head>
  <mj-body background-color="#f4f4f4">
    <mj-section background-color="#007bff" padding-bottom="20px">
      <mj-column>
        <mj-text align="center" color="#ffffff" font-size="24px" font-weight="700" padding="20px 0">
          Your Forecast Report
        </mj-text>
        <mj-text align="center" color="#ffffff" font-size="16px">
          Generated on {{ date }}
        </mj-text>
      </mj-column>
    </mj-section>
    <mj-section>
      <mj-column>
        <mj-text font-size="18px" font-weight="700" padding-bottom="10px">
          Summary
        </mj-text>
        <mj-text font-size="14px" line-height="22px">
          {{ description }}
        </mj-text>
      </mj-column>
    </mj-section>
    <mj-section>
      <mj-column>
        <mj-table>
          <tr style="background-color:#e9ecef;font-weight:700;text-align:left;padding:10px">
            <th style="padding:10px">Metric</th>
            <th style="padding:10px">Current</th>
          </tr>
          <tr style="border-bottom:1px solid #dee2e6">
            <td style="padding:10px">Humidity</td>
            <td style="padding:10px">{{ humidity }}</td>
          </tr>
          <tr style="border-bottom:1px solid #dee2e6">
            <td style="padding:10px">Temperature</td>
            <td style="padding:10px">{{ temperature }}</td>
          </tr>
        </mj-table>
      </mj-column>
    </mj-section>
    <mj-section background-color="#e9ecef">
      <mj-column>
        <mj-text align="center" font-size="12px" color="#666666">
          <a href="https://example.com/unsubscribe" style="color:#007bff;text-decoration:none">Unsubscribe</a>
        </mj-text>
      </mj-column>
    </mj-section>
  </mj-body>
</mjml>
